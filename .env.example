# ===========================================
# CONSOLIDATED ENVIRONMENT VARIABLES
# ===========================================
# This single .env file works for BOTH staging and production
# The deployment platform will automatically set NODE_ENV

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NEXT_PUBLIC_APP_NAME="Dayboard"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_DEBUG_MODE="false"

# ===========================================
# DEPLOYMENT SETTINGS
# ===========================================
# These will be auto-detected by Vercel or can be overridden
NEXT_PUBLIC_SITE_URL="https://bentlolabs.com"
NEXT_PUBLIC_BASE_URL="https://bentlolabs.com"

# ===========================================
# SUPABASE DATABASE
# ===========================================
# Using new publishable key (acts like legacy anon). Keep variable name expected by code.
NEXT_PUBLIC_SUPABASE_URL="https://your-project-id.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key"
# Optional clarity alias (not required by code yet):
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY="your_supabase_publishable_key"
# Service role key MUST remain server-only. Do not log or expose.
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"
# Fast auth logging flag (set to 1 to skip heavy auth logs)
NEXT_PUBLIC_FAST_AUTH_LOG="1"

# ===========================================
# STRIPE PAYMENTS
# ===========================================
# Using test keys for both staging and production (update to live keys when ready)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# ===========================================
# GOOGLE SERVICES (ENABLED FOR PRODUCTION)
# ===========================================
# OAuth and Maps API - Enabled for production
NEXT_PUBLIC_GOOGLE_CLIENT_ID="your_google_client_id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your_google_maps_api_key"

# ===========================================
# FEATURE FLAGS
# ===========================================
NEXT_PUBLIC_SHOW_DEBUG_INFO="false"
NEXT_PUBLIC_ENABLE_MOCK_DATA="false"

# ===========================================
# COPYRIGHT & SECURITY
# ===========================================
# üõ°Ô∏è AUTHORIZED DOMAINS - Update with your actual domains
NEXT_PUBLIC_AUTHORIZED_DOMAINS=localhost,127.0.0.1,bentlolabs.com,www.bentlolabs.com
# Copyright protection settings
NEXT_PUBLIC_COPYRIGHT_OWNER=Kyle Wade
NEXT_PUBLIC_COPYRIGHT_EMAIL=kyle.wade.ktw@gmail.com
NEXT_PUBLIC_ENABLE_CODE_PROTECTION=true

# ===========================================
# ANALYTICS & MONITORING (OPTIONAL)
# ===========================================
# Uncomment and configure when needed:
# NEXT_PUBLIC_GA_MEASUREMENT_ID="your_google_analytics_id"
# NEXT_PUBLIC_VERCEL_ANALYTICS="1"
# NEXT_PUBLIC_SENTRY_DSN="your_sentry_dsn_for_error_tracking"
